    "version": "0.2.0",
    "configurations": [    
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'data-gen'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=data-gen",
                    "--package=data-gen"
                ],
                "filter": {
                    "name": "data-gen",
                    "kind": "bin"
                }
            },
            "args": ["file:datafile1.json", "0:00", "1:00", "12:00", "12:30"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'data-gen'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=data-gen",
                    "--package=data-gen"
                ],
                "filter": {
                    "name": "data-gen",
                    "kind": "bin"
                }
            },
            "args": ["123"],
            "cwd": "${workspaceFolder}"
        }
    ]
}