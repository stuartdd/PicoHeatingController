{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "enter program name, for example ${workspaceFolder}/a.out",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'data-gen'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=data-gen",
                    "--package=data-gen"
                ],
                "filter": {
                    "name": "data-gen",
                    "kind": "bin"
                }
            },
            "args": [
                "test:",
                "host:http://192.168.1.177",
                "file:datafile1.json",
                "0:00",
                "1:00",
                "12:00",
                "12:30"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'data-gen'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=data-gen",
                    "--package=data-gen"
                ],
                "filter": {
                    "name": "data-gen",
                    "kind": "bin"
                }
            },
            "args": [
                "123"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}